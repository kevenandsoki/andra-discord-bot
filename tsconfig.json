{
	"compilerOptions": {
		"target": "esnext",
		"lib": [
			"esnext"
		],
		"module": "CommonJS",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"downlevelIteration": true,
		"outDir": "dist",
		"sourceMap": true
	},
	"include": [
		"**/*.js",
		"**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
